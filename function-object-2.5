function aluno(nome,prontuario,nota){
  this.nome = nome
  this.prontuario = prontuario
  this.nota = nota //atributos

  this.calcularNota = function(){
    if(this.nota>=6)
    return 'Aprovado'
    else if(this.nota>=4)
    return 'Pendente para Conselho'
    else if(this.nota>=0)
    return 'Reprovado'
    else
    return 'Nota inválida!'
  } //método se utiliza dos atributos definidos na própria function através do .this e sem parâmetros
}

